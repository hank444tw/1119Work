                    <a href="@Url.RouteUrl("EditMember",new {item.Rid})" class="btn btn-warning">修改</a>
                    <input type="hidden" value="@item.Rid" name="Rid" />
                    <input type="submit" value="刪除" class="btn btn-danger" onclick="return confirm('確定要刪除嗎?')" />
                </form>
            </td>
        </tr>
    }

</table>
