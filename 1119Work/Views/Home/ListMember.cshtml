<table class="table table-striped"> <!--表格交替顏色-->
    <tr>
        <th>
            帳號
        </th>
        <th>
            密碼
        </th>
        <th>
            姓名
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mem_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mem_password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mem_name)
            </td>
            <td>
