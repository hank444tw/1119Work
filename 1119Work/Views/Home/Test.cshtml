
@{
    ViewBag.Title = "會員登入";
}

<h2>會員登入</h2>

<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Scripts/popper.min.js"></script>


<form action="@Url.Action("Signin")" method="post">
    <div class="form-horizontal">
        <hr />
        <div class=" form-group">
            <span class=" control-label col-md-2">帳號</span>
            <div class="col-md-10">
                <input type="text" id="Mem_id" name="Mem_id" required="required" class="form-control" placeholder="這是placeholder的效果" />
            </div>
        </div>


        <div class=" form-group">
            <span class=" control-label col-md-2">密碼</span>
            <div class="col-md-10">
                <input type="password" id="Mem_password" name="Mem_password" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-default" />
                @ViewBag.Message
            </div>
        </div>

        <p>
            <input type="checkbox" name="checkbox1" checked="checked" value="測試" />
            測試
        </p>
        <p>
            測試
            <input type="date" name="checkbox1" class="form-control" />
        </p>

        <style type="text/css">
            #left ul {
                margin: 0px;
                padding: 0px;
            }

            #left ul li {
                list-style: none;
                font-family: "標楷體";
                color: #ec7622;
                padding: 6px 0px 6px 20px;
                display: block;
                border-bottom: dashed 1px #000000;
            }

            .test2{
                border:#ff0000 ridge;
                background:#b6ff00;
                margin:0px 10px 0px 10px;
                padding:0px 60px 0px 60px;
            }
        </style>

        <div id="left">
            <ul>
                <li>這是CSS</li>
                <li>練習</li>
            </ul>
        </div>

        <div class="col-md-4 test2">
            <marquee behavior="Alternate" scrollamount="25">
                efefefwefefe
            </marquee>
        </div>

        <div class="col-md-4" style="border:#ff0000 dashed">
            <marquee behavior="Alternate" scrollamount="25">
                efefefwefefe
            </marquee>
        </div>
    </div>
</form>




