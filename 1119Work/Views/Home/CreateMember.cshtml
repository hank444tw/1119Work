@model  _1119Work.Models.Member

@{
    ViewBag.Title = "新增會員";
}

<h2>新增會員</h2>

<form action="CreateMember" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">帳號</label>
            <div class="col-md-10">
                <input type="text" name="Mem_id" class="form-control" required="required"/>
                @Html.ValidationMessageFor(model => model.Mem_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">密碼</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mem_password, new { htmlAttributes = new { @class = "form-control",required="required"} })
                @Html.ValidationMessageFor(model => model.Mem_password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">姓名</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mem_name, new { htmlAttributes = new { @class = "form-control", required="required" } })
                @Html.ValidationMessageFor(model => model.Mem_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">大頭照</label>
            <div class="col-md-10">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="file" name="file" >
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-default" />
                @ViewBag.Message
            </div>
        </div>

    </div>
</form>

