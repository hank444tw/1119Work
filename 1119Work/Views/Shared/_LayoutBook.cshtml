<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 電子書線上閱讀系統</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <!--navbar-fixed-top可讓導覽列始終固定在頁面最上方-->
        <div class="container">
            <!--在container標籤中的內容可以隨視窗大小進行變化-->
            <div class="navbar-header">
                <!--導覽列的標頭-->
                <img src="~/Image/1.PNG" width="45" height="45" class="img-circle navbar-nav" />
                <a href="/" class="navbar-brand">電子書線上閱讀系統</a>
            </div>

            <ul class="nav navbar-nav">
                <li>
                    <a href="/" style="font-size:medium"><span class="glyphicon glyphicon-home"></span> 返回首頁</a>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                @if (Session["MemberID"] != null)
                {
                    <li>
                        <a href="" style="font-size:medium"><span class="glyphicon glyphicon-user"></span> @Session["Welcome"]</a>
                    </li>
                    <li>
                        <a href="/home/SignOut" style="font-size:medium"><span class="glyphicon glyphicon-log-out"></span> 登出</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/home/CreateMember" style="font-size:medium"><span class="glyphicon glyphicon-user"></span> 註冊</a>
                    </li>
                    <li>
                        <a href="/home/Signin" style="font-size:medium"><span class="glyphicon glyphicon-log-in"></span> 登入</a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-4 col-md-offset-5">
                    <p>&copy; 今天日期: @DateTime.Now.Year - @DateTime.Now.Month - @DateTime.Now.Day</p>
                    <p>&copy; 虎科神帥阿融製作</p>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>